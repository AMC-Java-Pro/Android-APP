<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login_screen"
    android:background="@color/main_logo">

    <FrameLayout

        android:layout_width="354dp"
        android:layout_height="571dp"
        android:background="@drawable/search_box"
        android:elevation="11dp"
        android:outlineSpotShadowColor="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.453">

        <FrameLayout
            android:layout_width="320dp"
            android:layout_height="537dp"
            android:layout_marginLeft="16.5dp"
            android:layout_marginTop="16.5dp"
            android:layout_marginBottom="16.5dp"
            android:background="@drawable/login"
            android:elevation="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.453">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/pbold"
                android:text="SIGNUP"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="35dp" />

            <FrameLayout
                android:layout_width="281dp"
                android:layout_height="50dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="110dp"
                android:background="@drawable/login_sub"
                android:elevation="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.453">


                <EditText
                    android:id="@+id/signupUsername"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:hint="Username"
                    android:fontFamily="@font/pbold"
                    android:textSize="15dp"
                    android:paddingLeft="22dp"
                    android:inputType="textPersonName" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="180dp"
                android:background="@drawable/login_sub"
                android:elevation="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.453">


                <EditText
                    android:id="@+id/sigupemail"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:hint="e-mail"
                    android:fontFamily="@font/pbold"
                    android:textSize="15dp"
                    android:paddingLeft="22dp"
                    android:inputType="textEmailAddress" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="250dp"
                android:background="@drawable/login_sub"
                android:elevation="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.453">


                <EditText
                    android:id="@+id/sigupPassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:hint="Password"
                    android:fontFamily="@font/pbold"
                    android:textSize="15dp"
                    android:paddingLeft="22dp"
                    android:inputType="textPassword" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="280dp"
                android:layout_height="50dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="320dp"
                android:background="@drawable/login_sub"
                android:elevation="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.453">


                <EditText
                    android:id="@+id/siguppassword"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:ems="10"
                    android:hint="Re-enter Password"
                    android:fontFamily="@font/pbold"
                    android:textSize="15dp"
                    android:paddingLeft="22dp"
                    android:inputType="textPassword" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="279dp"
                android:layout_height="50dp"
                android:layout_marginLeft="21dp"
                android:layout_marginTop="400dp"
                android:background="@drawable/login_but"
                android:elevation="5dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.453">

                <ProgressBar
                    android:id="@+id/progressbar"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="gone"/>

                <Button
                    android:id="@+id/signupbutton"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:text="Signup"
                    android:fontFamily="@font/pbold"
                    android:textColor="@color/white"
                    android:textSize="22dp"/>
            </FrameLayout>

            <TextView
                android:id="@+id/relogin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="490dp"
                android:fontFamily="@font/pmedium"
                android:text="Already have account?  Login"
                android:textSize="12dp" />


        </FrameLayout>
    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>